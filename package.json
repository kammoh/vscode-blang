{
	"name": "blang",
	"description": "B-Lang (Bluespec) SystemVerilog Language Support",
	"author": "Kamyar Mohajerani",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/kammoh/blang-vscode"
	},
	"publisher": "kammoh",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"BSV",
		"B-Lang",
		"Bluespec",
		"HDL",
		"SystemVerilog"
	],
	"icon": "images/blang.png",
	"engines": {
		"vscode": "^1.61.0"
	},
	"activationEvents": [
		"onLanguage:bsv"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "bsv",
				"aliases": [
					"B-LangSystemVerilog",
					"B-Lang SystemVerilog",
					"BluespecSystemVerilog",
					"Bluespec SystemVerilog",
					"BSV"
				],
				"extensions": [
					".bsv",
					".BSV"
				],
				"configuration": "./syntaxes/bsv-lang-config.json"
			}
		],
		"grammars": [
			{
				"language": "bsv",
				"scopeName": "source.bsv",
				"path": "./syntaxes/bsv-lang.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && cargo +nightly build && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
